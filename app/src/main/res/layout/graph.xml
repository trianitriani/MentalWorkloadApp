<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#F5F5F5">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher"
            android:contentDescription="Logo" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Hi! #username"
            android:textColor="#333333"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Sezione con grafico e frecce -->
    <!-- Contenitore centrale -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Spazio sopra -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Titolo sopra il grafico -->
        <TextView
            android:id="@+id/chart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily mental workload [Today]"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Riga con frecce e grafico -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <ImageView
                android:id="@+id/arrow_left"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Day before"
                android:tint="#7E57C2"
                android:clickable="true"
                android:focusable="true" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/arrow_right"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Next day"
                android:tint="#7E57C2"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Spazio sotto -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Footer con icone -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FAFAFA"
        android:paddingHorizontal="24dp">

        <!-- Graph Button -->
        <ImageView
            android:id="@+id/nav_graph"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/timeline"
            android:contentDescription="Graph area"
            android:padding="16dp"
            android:tint="#2196F3"
            android:clickable="true"
            android:focusable="true" />

        <!-- Statistiche -->
        <ImageView
            android:id="@+id/nav_study"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/menu_book"
            android:contentDescription="Study session"
            android:padding="16dp"
            android:tint="#888888"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</LinearLayout>